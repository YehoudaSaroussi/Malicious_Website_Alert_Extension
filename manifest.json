
{
    "manifest_version": 3,
    "name": "Malicious Website Alert",
    "version": "1.0",
    "description": "Alerts the user when visiting a known malicious website.",
    "permissions": ["webNavigation","storage","activeTab"],
    "action": {
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      },
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js", "popup.js"]
      }
    ],
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
  